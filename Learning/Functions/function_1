# Functions
# variable within a function

def move():
    x_pos = 0          
    x_pos += 1
    print(move)


# variable created outside function = global version of variable

x_pos = 0 

def move():
    global x_pos          # Have to use global to be able to call the variable created outside the fx - global variable
    x_pos += 1           # How fx should behave when called upin
    
move()                  #Call move fx 
move()   
move()
move()
print(x_pos)
