# Nested if statements
# multiple if statements


num_lives = 3
health = 100
num_health_kits = 3

if health <= 0 && num_health_kits <= 0 :
    num_lives -= 1
    print('You lose a life!')
    
    if num_lives <= 0:
    print('You died!')     
    
elif health <= 10:
    print ('Warning, less than 10% health!')
elif health <= 50:
    print ('Warning, less than 50% health!')
